{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,    
    "forceConsistentCasingInFileNames": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "outDir": "app",
    "rootDir": "src"
  },

  "exclude": ["node_modules", "__tests__", "__test__", "app", "jest.config.ts"]
}
